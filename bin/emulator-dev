#!/usr/bin/env bash
# 
# emulator-dev: Launch Android emulator optimized for development with emulated cameras
# Usage: emulator-dev -avd <avd_name>
#

echo "ðŸš€ Starting development emulator with emulated cameras..."

emulator \
  -gpu host \
  -no-snapshot-save \
  -no-boot-anim \
  -memory 4096 \
  -cores 6 \
  -feature -Vulkan \
  -writable-system \
  -show-kernel \
  "$@"

echo "ðŸ“· Emulator started with smooth emulated cameras!" 